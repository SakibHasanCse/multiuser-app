<link rel="stylesheet" href="/css/profile.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />


</head>
<style>
    .form-label-group{
        padding-bottom: 1rem;
    }
</style>

<body>
    <%- include('../includes/navigation.ejs') %>

    <div class="container">

      
        <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <% if (errorMessage) { %>
                    <div class="user-message user-message--error"><%= errorMessage %></div>
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title text-center">Your Profile Information</h5>

                        <form class=" form-signin" action="/profile" method="POST" >
                            <div class="form-label-group">
                            
                                <input class="form-control" type="text"
                                    placeholder="Email"   value="<%=oldInput.email%>" disabled required>
                            </div>
                            <div class="form-label-group">
                               
                                <input
                                    class="form-control <%=validationError.find(e=> e.param === 'name')?'invalid' : '' %> "
                                    type="text" placeholder="Name" name="name" id="name" value="<%=oldInput.name%>" required>
                            </div>
                            <div class="form-label-group">
                                
                                <input
                                    class="form-control <%=validationError.find(e=> e.param === 'phone')?'invalid' : '' %> "
                                    type="text" name="phone" placeholder="Phone Number" id="phone" value="<%=oldInput.phone%>" required>
                            </div>
                            <div class="form-label-group">
                                
                                <input
                                    class="form-control <%=validationError.find(e=> e.param === 'address')?'invalid' : '' %> "
                                    type="text" name="address" placeholder="Address" id="address" value="<%=oldInput.address%>" required>
                            </div>
                            <div class="form-label-group">
                               
                                <input
                                    class="form-control <%=validationError.find(e=> e.param === 'zip')?'invalid' : '' %> "
                                    type="text" name="zip" id="zip" placeholder="Address And Zip" value="<%=oldInput.zip%>" required>
                            </div>

            
                            <input type="hidden" name="_csrf" value="<%=csrfTokenss %>">

                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Update Info</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    </div>

    <%- include('../includes/end.ejs') %>